

<%= form_tag messages_path, method: :post, class: "row"  do %>
  <%= text_area_tag 'message[content]', @message.content, class: 'materialize-textarea col s10' %>
  <%= submit_tag 'Save', class: 'btn white-text col s2' %>
<% end %>

<div class="row">
  <% @messages.each do |message| %>
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <h4><%=message.user.email %></h4>
          <p><%=message.content %></p>
          <p>Like : <%=message.likes.length %></p>
          <p>Dislike : <%=message.dislikes.length %></p>
          <div class="row">
            <%= form_tag message_like_path, method: :post, class: "col s1 row"  do %>
              <%=hidden_field_tag 'like[message_id]', message.id %>
              <%= submit_tag 'Like', class: 'btn white-text col s12' %>
            <% end %>
            <%= form_tag message_dislike_path, method: :post, class: "col s1 row"  do %>
              <%=hidden_field_tag 'dislike[message_id]', message.id %>
              <%= submit_tag 'Dislike', class: 'btn white-text col s12' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

